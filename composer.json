{
    "name": "kang-babi/spreadsheet",
    "description": "Wrapper for PhpSpreadsheet",
    "type": "library",
    "require": {
        "phpoffice/phpspreadsheet": "^3.8",
        "php": "^8.3"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.2",
        "rector/rector": "^2.0",
        "pestphp/pest": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.68"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "KangBabi\\": "src/",
            "KangBabi\\Spreadsheet\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Joshua Benosa",
            "email": "joshuabuban.benosa@bicol-u.edu.ph"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
      "lint": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --ansi",
      "pest": "./vendor/bin/pest --ansi",
      "refactor": "./vendor/bin/rector process --ansi",
      "test": [
        "./vendor/bin/rector --dry-run --ansi",
        "./vendor/bin/phpstan analyse --ansi",
        "./vendor/bin/pest --color=always"
      ]
    }
}
